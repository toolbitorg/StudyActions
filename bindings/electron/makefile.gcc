TARGET = build/build/Release/tbi.node

# implementation

all: $(TARGET)

FORCE:

$(TARGET):
	@[ -d build ] || mkdir -p build
	cp ../../include/*.h build
	cp ../../include/module/*.h build
	cp ../../src/*.cpp build
	cp ../../src/module/*.cpp build
	cp ../../src/HIDAPI/linux/hid.c build
	cp tbi.i build
	cp binding_linux.gyp build/binding.gyp
	cd build; swig -c++ -javascript -node tbi.i
	cd build; HOME=~/.electron-gyp node-gyp rebuild --target=4.2.12 --arch=x64 --dist-url=https://atom.io/download/electron
	@[ -d toolbit-lib/lib ] || mkdir -p toolbit-lib/lib
	cp build/build/Release/tbi.node toolbit-lib/lib/tbi-linux.node

clean:
	rm -fr build


.PHONY: all clean
